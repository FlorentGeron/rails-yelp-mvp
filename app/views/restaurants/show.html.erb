<div class="container">
<h1><%= @restaurant.name %></h1>

<h2><%= @restaurant.category %></h2>

<p> <%= @restaurant.address %> - <%= @restaurant.phone_number%></p>
<p>What they say about <%= @restaurant.name %>:</p>
<ul>
  <% @restaurant.reviews.each do |avis| %>
  <li>
      <div class="card">
        <%= avis.rating %>/5 - <%= avis.content %>
      </div>
  </li>
  <%end%>
</ul>


<%= link_to new_restaurant_review_path(@restaurant.id) do%>
  <div class="btn btn-primary">Write your own review</div>
<%end%>

<%= link_to restaurants_path  do%>
  <div class="btn btn-primary">Back to List</div>
<%end%>
</div>
